        <script><![CDATA[var vts = current.vehicle_status; // Get the 'vehicle_status' value from the current record on the tracker table.

var gr = new GlideRecord('x_780003_lva_loaner_vehicle_catalog'); // Create a GlideRecord object for the "x_780003_lva_loaner_vehicle_catalog' table.

gr.addQuery('sys_id', current.vehicle); // Add a query condition to find records where 'sys_id' matches the 'vehicle' field in the current record on the tracker table.

gr.query(); // Execute the query

//Iterate through status on the tracker table. If true, change the status on the loaner table.
if (gr.next()) {
	if (vts == 'pending release' || vts =='out on field' || vts == 'returned for inspection' || vts == 'sent for servicing') {
		gr.status = 'unavailable';
	} else if (vts == 'returned to warehouse') {
		gr.status = 'available';
	} else if (vts == 'decommissioned') {
		gr.status = 'decommissioned';
	}
	gr.update(); // Update the 'status' field in the loaned table with the new status value.
}
	]]></script>
